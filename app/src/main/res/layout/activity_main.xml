<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_degradado"
    tools:context=".MainActivity">

    <LinearLayout

        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/txtResultado"
            android:layout_width="match_parent"
            android:layout_height="231dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="15dp"
            android:background="@drawable/borde_pantalla"
            android:gravity="bottom|right"
            android:fontFamily="@font/depot"
            android:textSize="40dp"

            />

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <TableRow>

                <Button
                    android:id="@+id/btnRaiz"
                    android:layout_width="44dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/borde_button"
                    android:text="√x"
                    android:textColor="@color/white"
                    app:cornerRadius="20dp"

                    />

                <Button
                    android:id="@+id/btnPi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/borde_button"
                    android:text="π"
                    android:textColor="@color/white"
                    app:cornerRadius="20dp" />

                <Button
                    android:id="@+id/btnPotencia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/borde_button"
                    android:text="^"
                    android:textColor="@color/white"
                    app:cornerRadius="20dp" />

                <Button
                    android:id="@+id/btnFactorial"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/borde_button"
                    android:text="!"

                    android:textColor="@color/white"
                    app:cornerRadius="20dp" />

                <Button
                    android:id="@+id/btnE"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/borde_button"
                    android:text="E"

                    android:textColor="@color/white"
                    app:cornerRadius="20dp" />
            </TableRow>

            <TableRow>

                <Button
                    android:id="@+id/btnSeno"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/borde_button"
                    android:text="sin"
                    android:textColor="@color/white"
                    app:cornerRadius="20dp" />

                <Button
                    android:id="@+id/btnCos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/borde_button"
                    android:text="cos"
                    android:textColor="@color/white"
                    app:cornerRadius="20dp" />

                <Button
                    android:id="@+id/btnTangente"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/borde_button"
                    android:text="tan"

                    android:textColor="@color/white"
                    app:cornerRadius="20dp" />
            </TableRow>

            <TableRow>

                <Button
                    android:id="@+id/btnParentesisAbierto"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/borde_button"
                    android:text="("
                    android:textColor="@color/white"
                    app:cornerRadius="20dp" />

                <Button
                    android:id="@+id/btnParentesisCerrado"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/borde_button"
                    android:text=")"
                    android:textColor="@color/white"
                    app:cornerRadius="20dp" />

                <Button
                    android:id="@+id/btnLogaritNatural"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/borde_button"
                    android:text="ln"
                    android:textColor="@color/white"
                    app:cornerRadius="20dp" />

                <Button
                    android:id="@+id/btnLogaritmo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/borde_button"
                    android:text="Log"
                    android:textColor="@color/white"
                    app:cornerRadius="20dp" />
            </TableRow>

            <TableRow>

                <Button
                    android:id="@+id/btnPorcentaje"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/borde_button"
                    android:text="%"
                    android:textColor="@color/white"
                    app:cornerRadius="20dp" />
                <Button
                    android:id="@+id/btnradiasexa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/borde_button"
                    android:text="RAD"
                    android:textColor="@color/white"
                    app:cornerRadius="20dp" />

                <Button
                    android:id="@+id/btnAC"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/borde_button"
                    android:backgroundTint="@color/azul2"
                    android:text="AC"
                    android:textColor="@color/white"
                    app:cornerRadius="20dp" />

                <ImageButton
                    android:id="@+id/btnBorrar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/borde_button"
                    android:backgroundTint="@color/azul2"
                    app:cornerRadius="20dp"

                    app:srcCompat="@android:drawable/ic_input_delete" />

            </TableRow>
        </TableLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:orientation="horizontal">

            <TableLayout
                android:layout_width="282dp"
                android:layout_height="wrap_content"
                android:background="@drawable/borde_fondo">

                <TableRow>

                    <Button
                        android:id="@+id/btnSiete"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:backgroundTint="@color/black"
                        android:text="7"
                        android:textSize="20dp"
                        android:fontFamily="@font/mono_osd"
                        android:textColor="@color/white" />

                    <Button
                        android:id="@+id/btnOcho"
                        android:textSize="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:backgroundTint="@color/black"
                        android:text="8"
                        android:fontFamily="@font/mono_osd"
                        android:textColor="@color/white" />

                    <Button
                        android:id="@+id/btnNueve"
                        android:textSize="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:backgroundTint="@color/black"
                        android:text="9"
                        android:fontFamily="@font/mono_osd"
                        android:textColor="@color/white" />


                </TableRow>

                <TableRow>

                    <Button
                        android:id="@+id/btnCuatro"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:backgroundTint="@color/black"
                        android:text="4"
                        android:textSize="20dp"
                        android:fontFamily="@font/mono_osd"
                        android:textColor="@color/white" />

                    <Button
                        android:id="@+id/btnCinco"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:backgroundTint="@color/black"
                        android:text="5"
                        android:textSize="20dp"
                        android:fontFamily="@font/mono_osd"
                        android:textColor="@color/white" />

                    <Button
                        android:id="@+id/btnSeis"
                        android:textSize="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:backgroundTint="@color/black"
                        android:fontFamily="@font/mono_osd"
                        android:text="6"

                        android:textColor="@color/white" />


                </TableRow>

                <TableRow>

                    <Button
                        android:id="@+id/btnUno"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:backgroundTint="@color/black"
                        android:text="1"
                        android:textSize="20dp"
                        android:fontFamily="@font/mono_osd"
                        android:textColor="@color/white" />

                    <Button
                        android:id="@+id/btnDos"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:backgroundTint="@color/black"
                        android:text="2"
                        android:textSize="20dp"
                        android:fontFamily="@font/mono_osd"
                        android:textColor="@color/white" />

                    <Button
                        android:id="@+id/btnTres"
                        android:textSize="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:backgroundTint="@color/black"
                        android:text="3"
                        android:fontFamily="@font/mono_osd"
                        android:textColor="@color/white" />


                </TableRow>

                <TableRow android:layout_height="97dp">


                    <Button
                        android:id="@+id/btnPunto"
                        android:layout_width="match_parent"
                        android:layout_height="46dp"

                        android:layout_margin="5dp"
                        android:layout_weight="0.5"
                        android:backgroundTint="@color/white"
                        android:fontFamily="@font/depot"
                        android:text="."
                        android:textSize="25dp"
                        app:cornerRadius="20dp" />

                    <Button
                        android:id="@+id/btnCero"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:backgroundTint="@color/black"
                        android:fontFamily="@font/mono_osd"
                        android:text="0"
                        android:textSize="20dp"
                        android:textColor="@color/white" />

                    <Button
                        android:id="@+id/btnIgual"
                        android:layout_width="match_parent"
                        android:layout_height="46dp"
                        android:layout_margin="5dp"
                        android:layout_weight="0.5"
                        android:backgroundTint="@color/white"
                        android:text="="

                        app:cornerRadius="20dp" />


                </TableRow>
            </TableLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btnMas"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/borde_button"
                    android:backgroundTint="@color/azulnuevo"
                    android:text="➕"
                    app:cornerRadius="20dp" />

                <Button
                    android:id="@+id/btnMenos"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/borde_button"
                    android:backgroundTint="@color/azulnuevo"
                    android:text="➖"
                    app:cornerRadius="20dp" />

                <Button
                    android:id="@+id/btnPor"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/borde_button"
                    android:backgroundTint="@color/azulnuevo"
                    android:text="✖️"
                    android:textColor="@color/white"
                    app:cornerRadius="20dp" />

                <Button
                    android:id="@+id/btnDivicion"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/borde_button"
                    android:backgroundTint="@color/azulnuevo"
                    android:text="➗"
                    android:textColor="@color/white"
                    app:cornerRadius="20dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>